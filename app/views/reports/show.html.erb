<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong><%= Report.human_attribute_name(:title) %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:body) %>:</strong>
  <%= @report.body %>
</p>

<%= render "reports/comment_index", comments: @report.comments %>

<%= form_with(url: polymorphic_url([@report,Comment]), local: true) do |form| %>
  <div class="field">
    <%= form.label t('activerecord.attributes.comment.content') %>
    <%= form.text_field :content, required: true %>
  </div>
  <div class="actions">
    <%= form.submit t('helpers.submit.comment') %>
  </div>
<% end %>

<% if @report.user == current_user then %>
  <%= link_to t('views.common.edit'), edit_report_path(@report) %>
  <%= '|' %>
<% end %>
<%= link_to t('views.common.back'), reports_path %>
