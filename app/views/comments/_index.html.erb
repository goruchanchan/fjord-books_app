<h2><%= Comment.model_name.human %></h2>

<p>
  <% if comments.empty? then %>
    <%= t('comments.item.no_item')%>
  <% else %>
    <table>
      <thead>
        <tr>
          <th><%= Comment.human_attribute_name(:content) %></th>
          <th><%= User.human_attribute_name(:name) %></th>
          <th><%= Comment.human_attribute_name(:commented_date) %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% comments.each do |comment| %>
          <tr>
            <td><%= comment.content %></td>
            <td><%= comment.user.name.empty? ? comment.user.email : comment.user.name %></td>
            <td><%= l comment.created_at , format: :long %></td>
           </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</p>
